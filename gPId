package sample;

import java.util.Arrays;
import java.util.Scanner;

public class Main {

    //// This code generates an id in a growing sequence starting from 1

    public static void main(String[] args) {


        Scanner productName = new Scanner(System.in);
        int a = 1;
        while(productName.hasNextLine()) {
            String pN = productName.nextLine();
            System.out.println("you product name " + pN);

            if (a < 1000) {
                System.out.println("Your product id is: " + a);
                a++;
            }
            else
                System.out.println("ups");
        }


    }
}

